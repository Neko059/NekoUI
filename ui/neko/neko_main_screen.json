{
  "namespace": "rem",

  "panel_icon_2": {
    "type": "panel",
    "size": "$han_size",
    "$han_size|default": [ "100%" , "35px"]
  },

  "panel_icon_stack": {
    "type": "panel"
  },

  "option_info_label_with_image": {
    "type": "image",
    "alpha": 1,
    "texture": "textures/ui/text_label_box",
    "size": [ "100%", "100%c + 6px" ],
    "$used_fontsize|default": "normal",
    "$used_fonttype|default": "default",
    "controls": [
      {
        "control": {
          "type": "label",
          "color": "$main_header_text_color",
          "size": [ "100% - 8px", "default" ],
          "layer": 1,
          "text": "$container_text_binding_name",
          "font_size": "$used_fontsize",
          "text_alignment": "left",
          "font_type": "$used_fonttype",
          "bindings": [
            {
              "binding_name": "$container_text_binding_name"
            }
          ]
        }
      }
    ]
  },

  "panel_content_button": {
    "type": "panel",
    "size": [ 27 , "100%" ]
  }, 

  "content_buttons": {
    "type": "panel",
    "size": [ "17%" , "100%" ],
    "controls": [
      {
        "stack_panel": {
        "type": "stack_panel",
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "orientation": "horizontal", 
        "animation_reset_name": "screen_animation_reset",
        "anims": [
          "@anim_test.screen_exit_animation_push_offset_2",
          "@anim_test.screen_exit_animation_pop_offset_2",
          "@anim_test.screen_entrance_animation_push_offset_2",
          "@anim_test.screen_entrance_animation_pop_offset_2"
        ],
        "controls": [
            {
              "feedback@rem.panel_content_button": { "bindings": [{ "binding_name": "#feedback_visible", "binding_name_override": "#visible" }], "controls": [ { "feedback_button@x_button.feedback_button": {}}]}
            },
            {
              "signin_xbox@rem.panel_content_button": { "bindings": [{ "binding_name": "#sign_in_visible", "binding_name_override": "#visible" }], "controls": [ { "signin_xbox@x_button.signin_xbox": {}}]}
            },
            {
              "exit_button@rem.panel_content_button": { "ignored": "$win10_edition", "controls": [{"exit_button@x_button.exit_button": {}}]}
            }
          ]
        }
      }
    ]
  },

  "main_button_and_skins": {
    "type": "panel",
    "size": [ "100%" , 140 ],
    "offset": [ 0 , "7.5% - 5px" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      {
        "stack_panel": {
          "type": "stack_panel",
          "anchor_from": "center",
          "anchor_to": "center",
          "orientation": "horizontal",
          "controls": [
            {
              "skin_panel_2@rem.skin_panel_2": {}
            },
            { 
              "spacer": {
                "type": "panel",
                "size": [ 5 , "100%" ]
              }
            },
            {
              "button_and_icons@rem.button_and_icons": {}
            }
          ]
        }
      }
    ]
  },

  "skin_panel_2@neko_c.bg_3": {
    "layer": 5,
  //  "type": "panel",
    "anchor_to": "middle",
    "anchor_from": "middle",
    "size": [ 110 , "100%" ],
    "offset": [ 0 , 0 ],
    "controls": [
      { "skin_panel@rem.skin_panel": {} }
    ]
  },

  "skin_panel": {
    "layer": 5,
    "type": "panel",
    "anchor_to": "middle",
    "anchor_from": "middle",
    "size": [ 150 , 150 ],
    "offset": [ 0 , 0 ],
    "controls": [
      { "viewer_panel@start.skin_viewer_panel": {} }
    ]
  },

  "button_and_icons": {
    "type": "panel",
    "layer": 100,
    "anchor_from": "center",
    "anchor_to": "center",
    "offset": [ 7 , 0 ], // X Y
    "size": [ 115 , "100%" ],
    "controls": [
      {
        "stack_panel": {
          "type": "stack_panel",
          "size": [ "100%", "100%c" ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "orientation": "vertical", // Horizontal & Vertical
          "controls": [
            { "panel_05@rem.panel_icon_2": {
              "controls":[ 
                  { 
                    "panel": { 
                    "type": "stack_panel",
                    "size": [ "100%", "100%" ],
                    "orientation": "horizontal", 
                     "controls": [
                      { "panel_icon_2@rem.panel_icon_stack": { "size": [ "fill", 35 ], "controls": [ { "icon1@x_button.play_button_2": {}}]}},
                      { "panel_icon_2@rem.panel_icon_stack": { "size": [ 35, 35 ],  "bindings": [{ "binding_name": "#feedback_visible", "binding_name_override": "#enabled" }], "controls": [ { "achievements_button_aslinya2@x_button.achievements_button_aslinya2": {}}]}}
                    ]
                  }
                }
              ]
            }
          },
        //    { "panel_05@rem.panel_icon_2": {"controls":[{ "icon1@x_button.play_button_2": {}}]}},
        //    { "panel_02@rem.panel_icon_2": {"controls":[{ "icon1@x_button.achievements_button": {}}]}},
            { "panel_03@rem.panel_icon_2": {"controls":[{ "icon1@x_button.store_button": {}}]}},
            { "panel_04@rem.panel_icon_2": {"controls":[{ "icon1@x_button.profile_button": {}}]}},
            { "panel_05@rem.panel_icon_2": {
              "controls":[ 
                  { 
                    "panel": { 
                      "type": "stack_panel",
                      "size": [ "100%", "100%" ],
                      "orientation": "horizontal", 
                      "controls": [
                        { "panel_icon_2@rem.panel_icon_stack": { "size": [ "fill", 35 ], "controls": [ { "icon1@x_button.settings_button": {}}]}}, 
                        { "panel_icon_2@rem.panel_icon_stack": { "bindings": [{ "binding_name": "#sign_in_visible", "binding_name_override": "#visible" }], "size": [ "50%", 35 ], "controls": [ { "xbox_button@x_button.xbox_button": {}}]}}
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "panel_icon_play": {
    "type": "panel",
    "size": [ "150px" , 35 ]
  },

  "info_label": {
    "type": "label",
    "layer": 5,
    "font_type": "AGENCYB",
    "font_scale_factor": 0.7,
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "offset": [ 5 , 32 ],
    "color": [ 0.0, 0.0, 0.0 ],
    "size": [ "default", "default" ], // x dan y
    "text": "NekoUI v7.6"
  },

  "title_panel_pocket": {
    "type": "panel",
    "offset": [ 0, "5%" ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": [ "40%", 40 ],
    "controls": [
      { "title_image@common_art.title_image": {} },
      {
        "splash_text@splash_text": {
          "offset": [ -106, 8 ]
        }
      }
    ]
  },

  "title_panel_win10": {
    "type": "panel",
    "size": [ "50%", 50 ],
    "offset": [ 0, "4%" ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      { "title_image@common_art.title_image": {} },
      {
        "splash_text@splash_text": {
          "offset": [ -8, 10 ]
        }
      }
    ]
  },
  
  "title_panel_content": {
    "type": "panel",
    "layer": 5,
    "variables": [
      {
        "requires": "$win10_edition",
        "$title_panel": "rem.title_panel_win10"
      },
      {
        "requires": "($pocket_edition or $console_edition)",
        "$title_panel": "rem.title_panel_pocket"
      }
    ],
    "controls": [
      {
        "$title_panel@$title_panel": {}
      }
    ]
  },
  
  "button_panel": {
  "type": "panel",
  "controls": [     
        { "gamertag_panel@loli.gamertag_panel": {}},
        { "title_panel_content@rem.title_panel_content": {}},
        { "main_button_and_skins@rem.main_button_and_skins": {}},
        { "info_label@rem.info_label": {}}
      ]
    }
  }
