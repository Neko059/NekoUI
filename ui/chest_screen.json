      }
    ]
  },

  "shulker_box_screen@chest.small_chest_screen": {
    "$close_on_player_hurt": true,
    "variables": [
      {
        "requires": "$desktop_screen",
        "$screen_content": "chest.shulker_box_panel",
        "$screen_bg_content": "common.screen_background"
      },
      {
        "requires": "$pocket_screen",
